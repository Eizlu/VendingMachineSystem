<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VendingMachineSystem.Mobile.MainPage"
             BackgroundColor="#f4f4f4">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" BackgroundColor="White" Padding="15" ColumnSpacing="10">

            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                <Label x:Name="LblUzivatel" 
                       Text="Uživatel: ..." 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="Black"
                       LineBreakMode="TailTruncation"/>
                <Label x:Name="LblRole" 
                       Text="Role: ..." 
                       FontSize="12" 
                       TextColor="Gray"/>
            </VerticalStackLayout>

            <Button Grid.Column="1" 
                    Text="Odhlásit" 
                    Clicked="OnLogoutClicked" 
                    FontSize="14" 
                    HeightRequest="40" 
                    VerticalOptions="Center"
                    BackgroundColor="#dc3545" 
                    TextColor="White" 
                    Padding="15,0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">

                <Label Text="Seznam automatů" FontSize="20" FontAttributes="Bold" TextColor="#333" Margin="0,10"/>

                <VerticalStackLayout x:Name="SeznamAutomatuLayout" Spacing="10">
                    <ActivityIndicator IsRunning="True" Color="Blue"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>